<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cn668.dao.ContentsDao">

	<!-- 查询内容集合 -->
    <select id="findContentss" resultType="cn.cn668.pojo.Contents">
        select id,title,userId,insertDt from contents
    </select>
    
    <!-- 查询内容 -->
    <select id="findContents" resultType="cn.cn668.pojo.Contents">
    	select * from contents
		where 
		<if test="id!=null and id !=''">
			id = #{id}
		</if>
		<if test="alias!=null and alias !=''">
			alias = #{alias}
		</if>
    </select>
 
</mapper>